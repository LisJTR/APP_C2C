{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,  // ✅ Permite archivos JavaScript junto con TypeScript
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",       // ✅ Asegura que los archivos .js sean reconocidos
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
